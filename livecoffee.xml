<a:application xmlns:a="http://ajax.org/2005/aml">
    <a:window
      id = "coffeeOutput"
      title = "CoffeeScript Output"
      center = "true"
      modal = "false"
      buttons = "close"
      kbclose = "true"
      width = "800"
      height = "500">
        <a:tab id="coffeeTabs" height="415">
            <a:page id="coffeeCodeView" caption="Code View">
                <a:codeeditor
                    id="coffeeCode"
                    flex="1"
                    realtime="true"
                    border="0"
                    showprintmargin="false"
                    printmargincolumn="0"
                    width="780"
                    height="340" />
                    <a:divider />
                    <a:hbox pack="end" padding="5" edge="10 10 5 10">
                        <a:label for="coffeeoptMatchLines">Match Lines (buggy)</a:label>
                        <a:checkbox id="coffeeoptMatchLines" />
                        
                        <a:label for="coffeeoptBare">Compile bare?</a:label>
                        <a:checkbox id="coffeeoptBare" />
                        
                        <a:label for="coffeeoptNodes">Compile nodes?</a:label>
                        <a:checkbox id="coffeeoptNodes" />
                        
                        <a:label for="coffeeoptTokens">Compile tokens?</a:label>
                        <a:checkbox id="coffeeoptTokens" />
                        
                        <a:button class="ui-btn-green" default="2" caption="Update JavaScript" onclick = "require('ext/livecoffee/livecoffee').compile();"/>
                    </a:hbox>
            </a:page>
            <a:page id="coffeeNodeView" caption="Node View">
                <a:textarea
                    id="coffeeNodes"
                    flex="1"
                    realtime="true"
                    border="0"
                    showprintmargin="false"
                    printmargincolumn="0"
                    width="780"
                    height="350" />
            </a:page>
            <a:page id="coffeeTokenView" caption="Token View">
                <a:textarea
                    id="coffeeTokens"
                    flex="1"
                    realtime="true"
                    border="0"
                    showprintmargin="false"
                    printmargincolumn="0"
                    width="780"
                    height="350" />
            </a:page>
        </a:tab>
        <a:button onclick="coffeeOutput.hide()">Close</a:button>
    </a:window>
</a:application>